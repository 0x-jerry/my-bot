// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model ProviderConfig {
  id    Int     @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  url String
  model String
  apiKey String

  agentConfigs AgentConfig[]
}


model McpConfig {
  id    Int     @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  url String

  agentConfigs AgentConfig[]
}

model PromptConfig {
  id    Int     @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  prompt String

  agentConfigs AgentConfig[]
}

model AgentConfig {
  id    Int     @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String

  systemPromptId Int?
  systemPrompt PromptConfig? @relation(fields: [systemPromptId], references: [id])

  providerConfigId Int?
  provider ProviderConfig? @relation(fields: [providerConfigId], references: [id])

  mcps McpConfig[]

  chatSessions ChatSession[]
}

model ChatSession {
  id    Int     @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String

  agentConfigId Int?
  agentConfig AgentConfig? @relation(fields: [agentConfigId], references: [id])
}

model ChatMessage {
  id    Int     @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessionId Int

  role       String
  rawContent String
  message    String
}

model ChatMemory {
  id    Int     @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessionId Int
  content String
}
